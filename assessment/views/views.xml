<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="master_ruangan_tree_view" model="ir.ui.view">
            <field name="name">master.ruangan.tree.view</field>
            <field name="model">master.ruangan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="tipe_ruangan" />
                    <field name="lokasi_ruangan" />
                    <field name="kapasitas" />
                </tree>
            </field>
    </record>


    <record id="master_ruangan_form_view" model="ir.ui.view">
            <field name="name">master.ruangan.form.view</field>
            <field name="model">master.ruangan</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <group string="Informasi Ruangan">
                            <field name="name" />
                            <field name="tipe_ruangan" widget="radio" />
                            <field name="lokasi_ruangan" />
                            <field name="kapasitas" />
                        </group>
                        <group string="Gambar dan Deskripsi">
                            <field name="photo" widget="image" options='{"size": [150, 140]}'/>
                            <field name="notes" />
                        </group>
                    </sheet>
                </form>
            </field>
    </record>


    <record id="pemesanan_ruangan_tree_view" model="ir.ui.view">
            <field name="name">pemesanan.ruangan.tree.view</field>
            <field name="model">pemesanan.ruangan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number" />
                    <field name="ruangan" />
                    <field name="name" />
                    <field name="tanggal" />
                    <field name= "state" widget='badge' />
                </tree>
            </field>
    </record>


    <record id="pemesanan_ruangan_form_view" model="ir.ui.view">
            <field name="name">pemesanan.ruangan.form.view</field>
            <field name="model">pemesanan.ruangan</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="proses_pemesanan" string="Proses Pemesanan" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', '=', 'done')]}" />
                       <field name= "state"   widget='statusbar'/>
                    </header>
                    <sheet>
                        <div class='oe_title'>
                            <label for='number' string='Nomor Pemesanan'/>
                            <h1>
                                <field name='number' readonly='1' force_save='1' />
                            </h1>
                        </div>
                        <group string="Informasi Pemesanan">
                            <field name="name" />
                            <field name="ruangan"  />
                            <field name="tanggal" />
                        </group>
                        <group string="Deskripsi" >
                            <field name="notes" />
                        </group>
                        <notebook>
                            <page string="Riwayat Pemesanan">
                                <field name="riwayat_pemesanan">
                                    <tree create="0" edit="0" delete="0">
                                        <field name="event" readonly="1" />
                                        <field name="create_date" string="Waktu"  readonly="1" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
    </record>

    <record id="pemesanan_ruangan_search_view" model="ir.ui.view">
            <field name="name">pemesanan.ruangan.search.view</field>
            <field name="model">pemesanan.ruangan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="number" />
                    <field name="name" />
                    <group expand='0' string="Group by">
                        <filter name="group_by_state" string="Status" context="{'group_by':'state'}" />
                </group>
            </search>
        </field>
    </record>

     <record id="pemesanan_ruangan_kanban_view" model="ir.ui.view">
            <field name="name">pemesanan.ruangan.kanban.view</field>
            <field name="model">pemesanan.ruangan</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="number"/>

                    <field name="name" />
                    <field name="ruangan" />
                    <field name="tanggal"/>
                    <field name="state"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_headings mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_records_headings mt4">
                                            <span><t t-esc="record.number.value"/></span>
                                        </strong>
                                    </div>
                                    <strong><field name="name"/></strong>
                                    <br/>
                                        <t t-if="record.state.value == 'done'">
                                            <div style="font-weight:bold;color:green;">
                                                <strong>
                                                    <p> Status :
                                                        <t t-esc="record.state.value"/>
                                                    </p>
                                                </strong>
                                            </div>
                                        </t>
                                        <t t-if="record.state.value == 'draft'">
                                            <div style="font-weight:bold;color:silver;">
                                                <strong>
                                                    <p> Status :
                                                        <t t-esc="record.state.value"/>
                                                    </p>
                                                </strong>
                                            </div>
                                        </t>
                                        <t t-if="record.state.value == 'on_going'">
                                            <div style="font-weight:bold;color:yellow;">
                                                <strong>
                                                    <p> Status :
                                                        <t t-esc="record.state.value"/>
                                                    </p>
                                                </strong>
                                            </div>
                                        </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span class="o_label">Tanggal : </span>
                                        <field name="tanggal"/>
                                        <br></br>

                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'info', 'done': 'success', 'on_going': 'warning',}}"/>

                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
</odoo>